module Servactory
  module Context
    module Workspace
      @errors: Errors

      attr_reader inputs: InputAttributes

      def initialize: () -> void

      def assign_inputs: (InputAttributes inputs) -> untyped

      def errors: -> Servactory::Errors::Collection

      def fail_input!: (Symbol input_attribute_name, message: String) -> void

      def fail!: (message: String, meta: untyped?) -> Errors

      def raise_first_fail: () -> (nil | untyped)
    end
  end
end

module Servactory
  module Context
    module Workspace
      @inputs: Inputs
      @internals: Internals
      @outputs: Outputs

      def inputs: -> Inputs
      alias inp inputs

      def internals: -> Internals
      alias int internals

      def outputs: -> Outputs
      alias out outputs

      def initialize: () -> void

      def fail_input!: (Symbol input_name, message: String) -> Exception

      def fail!: (message: String, meta: untyped?) -> Exception
    end
  end
end
